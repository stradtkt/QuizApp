<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Quizzes</title>

    <environment include="Development">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-9ralMzdK1QYsk4yBY680hmsb4/hJ98xK3w0TIaJ3ll4POWpWUYaA2bRjGGujGT8w" crossorigin="anonymous">
        <link rel="stylesheet" href="~/theme/assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">
        <link rel="stylesheet" href="~/theme/assets/css/now-ui-kit.min.css">
        <link rel="stylesheet" href="~/css/main.css">
        <link rel="stylesheet" href="~/css/site.css">
    </environment>
</head>
<body>
<nav class="navbar navbar-expand-lg fixed-top bg-dark">
  <div class="container">
    <a class="navbar-brand" asp-action="Dashboard" asp-controller="Home">Quizzes</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
     <div class="collapse navbar-collapse" id="navbarNavDropdown">
<ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" asp-action="Dashboard" asp-controller="Home">Dashboard</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
  <div class="container">
        @RenderBody()
    </div>
        <section id="footer-section">
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                            <p>&copy; 2018 - Quizzes</p>
                        </div>
                        <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3"></div>
                        <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3"></div>
                    </div>
                </div>
            </footer>
        </section>

    <environment include="Development">
        <script src="~/theme/assets/js/core/jquery.min.js"></script>
        <script src="~/theme/assets/js/core/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>
        <script src="~/theme/assets/js/core/popper.min.js"></script>
        <script src="~/theme/assets/js/now-ui-kit.min.js"></script>
        <script src="~/js/site.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>